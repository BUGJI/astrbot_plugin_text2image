{
  "default_font": {
    "description": "默认字体名称",
    "hint": "默认字体名称，填入在fonts目录下对应的.ttf文件名(不带扩展名)，如AAAA.ttf则填入AAAA",
    "type": "string",
    "default": "AAAA"
  },
  "limit": {
    "description": "对会话的限制",
    "type": "object",
    "hint": "限制性能防止爆炸",
    "items": {
      "max_images_per_task": {
        "description": "单次任务最大图片数",
        "type": "int",
        "hint": "每个任务最多生成的图片数量",
        "default": 1000
      },
      "max_chars_per_task": {
        "description": "单次任务最大字符数",
        "type": "int",
        "hint": "每个任务最多输入的字符数量",
        "default": 20000
      },
      "max_task": {
        "description": "队列最大任务数",
        "type": "int",
        "hint": "队列中最多允许的任务数量，不建议设置太高",
        "obvious_hint": true,
        "default": 20
      },
      "fonts_per_page": {
        "description": "每页显示字体数量",
        "type": "int",
        "hint": "在字体列表中每页显示的字体数量",
        "default": 5
      }
    }
  }
}



